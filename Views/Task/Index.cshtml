@model IEnumerable<TaskItem>

<h1>Tarefas</h1>

<p>
    <a href="/Task/Create">Adicionar Nova Tarefa</a>
</p>

<table>
    <thead>
        <tr>
            <th>Título</th>
            <th>Descrição</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.Status</td>
                <td>
                    <a href="/Task/Edit/@task.Id">Editar</a> |
                    <a href="/Task/Delete/@task.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
